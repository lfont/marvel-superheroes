  "description": "List Marvel Super Heroes.",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && webpack",
    "test": "jest",
    "start": "ts-node ./src/server.tsx",
    "watch": "npm-run-all --parallel watch:webpack watch:ts-node",
